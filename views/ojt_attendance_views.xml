<?xml version="1.0" encoding="UTF-8"?>
<odoo noupdate="0">
    <!-- List View -->
    <record id="view_ojt_attendance_list" model="ir.ui.view">
        <field name="name">ojt.attendance.list</field>
        <field name="model">ojt.attendance</field>
        <field name="arch" type="xml">
            <list string="Attendances">
                <field name="event_id"/>
                <field name="participant_id"/>
                <field name="batch_id"/>
                <field name="presence"/>
                <field name="method"/>
                <field name="check_in"/>
                <field name="check_out"/>
            </list>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_ojt_attendance_kanban" model="ir.ui.view">
        <field name="name">ojt.attendance.kanban</field>
        <field name="model">ojt.attendance</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state">
                <field name="participant_id"/>
                <field name="batch_id"/>
                <field name="date"/>
                <field name="is_present"/>
                <field name="remarks"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card">
                            <div class="oe_kanban_content">
                                <strong><field name="participant_id"/></strong><br/>
                                <small>Batch: <field name="batch_id"/></small><br/>
                                <small>Date: <field name="date"/></small><br/>
                                <span t-if="record.is_present.raw_value" class="text-success">Present</span>
                                <span t-if="!record.is_present.raw_value" class="text-danger">Absent</span><br/>
                                <span><field name="remarks"/></span>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_ojt_attendance_form" model="ir.ui.view">
        <field name="name">ojt.attendance.form</field>
        <field name="model">ojt.attendance</field>
        <field name="arch" type="xml">
            <form string="Attendance Record">
                <sheet>
                    <group>
                        <field name="date"/>
                        <field name="participant_id"/>
                        <field name="batch_id"/>
                        <field name="is_present"/>
                    </group>
                    <group>
                        <field name="remarks" placeholder="Additional notes or explanations..."/>
                    </group>
                    <group>
                        <field name="check_in"/>
                        <field name="check_out"/>
                        <field name="presence"/>
                        <field name="method"/>
                    </group>
                    <group>
                        <field name="notes" placeholder="Additional notes or explanations..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_ojt_attendance_search" model="ir.ui.view">
        <field name="name">ojt.attendance.search</field>
        <field name="model">ojt.attendance</field>
        <field name="arch" type="xml">
            <search string="Search Attendance Records">
                <field name="participant_id"/>
                <field name="batch_id"/>
                <field name="date"/>
                <filter string="Present" name="filter_present" domain="[('is_present', '=', True)]"/>
                <filter string="Absent" name="filter_absent" domain="[('is_present', '=', False)]"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="ojt_attendance_action" model="ir.actions.act_window">
        <field name="name">Attendances</field>
        <field name="res_model">ojt.attendance</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Track OJT participant attendance records here</p>
        </field>
    </record>

</odoo>

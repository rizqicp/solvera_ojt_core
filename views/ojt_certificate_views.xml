<?xml version="1.0" encoding="UTF-8"?>
<odoo noupdate="0">

    <!-- Tree -->
    <record id="view_ojt_certificate_list" model="ir.ui.view">
        <field name="name">ojt.certificate.list</field>
        <field name="model">ojt.certificate</field>
        <field name="arch" type="xml">
            <list>
                <field name="display_name"/>
                <field name="partner_id"/>
                <field name="batch_id"/>
                <field name="average_score"/>
                <field name="issued_date"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Form -->
    <record id="view_ojt_certificate_form" model="ir.ui.view">
        <field name="name">ojt.certificate.form</field>
        <field name="model">ojt.certificate</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_issue_certificate" type="object" string="Issue" invisible="state != 'draft'" class="btn-primary"/>
                    <field name="state" widget="statusbar" readonly="1"/>
                </header>
                <sheet>
                    <group>
                        <field name="batch_id"/>
                        <field name="participant_id" domain="[('batch_id', '=', batch_id)]" readonly="not batch_id"/>
                        <field name="issued_date"/>
                        <field name="total_assignments" readonly="1"/>
                        <field name="average_score" readonly="1"/>
                    </group>
                    <group>
                        <field name="qr_token" readonly="1"/>
                        <field name="qr_url" readonly="1"/>
                        <field name="pdf_attachment_id" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="ojt_certificate_action" model="ir.actions.act_window">
        <field name="name">Certificates</field>
        <field name="res_model">ojt.certificate</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_ojt_certificate_list"/>
    </record>
</odoo>

<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- List view -->
    <record id="view_ojt_assignment_submit_list" model="ir.ui.view">
        <field name="name">ojt.submission.list</field>
        <field name="model">ojt.submission</field>
        <field name="arch" type="xml">
            <list string="Assignment Submissions" create="true" edit="true">
                <field name="assignment_id"/>
                <field name="participant_id"/>
                <field name="submitted_on"/>
                <field name="late" widget="boolean_toggle"/>
                <field name="url_link"/>
                <field name="score"/>
                <field name="reviewer_id"/>
                <field name="state" widget="badge" decoration-info="state == 'submitted'" decoration-success="state == 'scored'" decoration-warning="state == 'draft'"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_ojt_assignment_submit_form" model="ir.ui.view">
        <field name="name">ojt.submission.form</field>
        <field name="model">ojt.submission</field>
        <field name="arch" type="xml">
            <form string="Assignment Submission">
                <header>
                    <button name="action_submit"
                            type="object"
                            string="Mark as Submitted"
                            class="btn-primary"
                            invisible="state != 'draft'"/>
                    <button name="action_score"
                            type="object"
                            string="Mark as Scored"
                            class="btn-secondary"
                            invisible="state == 'scored'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,submitted,scored"/>
                </header>

                <sheet>
                    <group>
                        <group>
                            <field name="assignment_id" readonly="1"/>
                            <field name="participant_id" readonly="1"/>
                            <field name="submitted_on" readonly="1"/>
                            <field name="late" readonly="1"/>
                        </group>
                        <group>
                            <field name="url_link"/>
                            <field name="attachment_ids" widget="many2many_binary" filename="name"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Review">
                            <group>
                                <field name="score"/>
                                <field name="reviewer_id" readonly="1"/>
                                <field name="feedback" widget="html"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search view -->
    <record id="view_ojt_assignment_submit_search" model="ir.ui.view">
        <field name="name">ojt.submission.search</field>
        <field name="model">ojt.submission</field>
        <field name="arch" type="xml">
            <search string="Assignment Submissions">
                <field name="assignment_id"/>
                <field name="participant_id"/>
                <filter string="Late" name="late" domain="[('late', '=', True)]"/>
                <filter string="Submitted" name="submitted" domain="[('state', '=', 'submitted')]"/>
                <filter string="Scored" name="scored" domain="[('state', '=', 'scored')]"/>
                <group expand="0" string="Group By">
                    <filter string="Assignment" name="group_assignment" context="{'group_by': 'assignment_id'}"/>
                    <filter string="Participant" name="group_participant" context="{'group_by': 'participant_id'}"/>
                    <filter string="Reviewer" name="group_reviewer" context="{'group_by': 'reviewer_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="ojt_submission_action" model="ir.actions.act_window">
        <field name="name">Assignment Submissions</field>
        <field name="res_model">ojt.submission</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Submit and review On-the-Job Training assignments.
            </p>
        </field>
    </record>

</odoo>
